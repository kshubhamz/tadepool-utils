{
    "display": "Node LTS",
    "_version": "18.1.0",
    "compilerOptions": {
      "lib": [
        "es2023"
      ],
      "module": "Node16",
      "target": "es2022",
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node16",
      "outDir": "dist",
      "declaration": true,
      "declarationMap": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ]
}